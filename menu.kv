# -*- coding: utf-8 -*-

Root:

<Root@BoxLayout>: #ルートウィジェットで、
    orientation: 'vertical'
    BoxLayout:
        canvas.before:
            Color:
                rgb: 1,1,1
        Button:
            font_size: 100
            text: 'ListView'
            on_release: fc.view_mode = 'list'
        Button:
            font_size: 100
            text: 'IconView'
            on_release: fc.view_mode = 'icon'
    FileChooser:
        font_size: 60
        id: fc
        rootpath: './'
        path: './'
        filters: ['*.mp4']
        filter_dirs: True
        FileChooserListLayout
        FileChooserIconLayout
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                font_size: 60
                text: 'height(default=105)'
            Label:
                font_size: 60
                text: 'width(default=68)'
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                font_size: 60
                id: height
                text: '105'
            TextInput:
                font_size: 60
                id: width
                text: '68'
    startButton:
        font_size: 100
        text: 'Start Analysis'
        on_press: root.out = [fc.selection, int(height.text), int(width.text)]

